<h1>Listing sites</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Lon</th>
    <th>Lat</th>
    <th>Category</th>
    <th>Installed at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.name %></td>
    <td><%= site.lon %></td>
    <td><%= site.lat %></td>
    <td><%= site.category %></td>
    <td><%= site.installed_at %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

